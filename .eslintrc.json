{
    "extends": [
        "@dzek69/eslint-config-base"
    ],
    "env": {
        "node": true
    },
    "overrides": [
        {
            "files": ["src/*.spec.js", "src/**/*.spec.js"],
            "env": {
                "mocha": true
            },
            "rules": {
                "global-require": "off",
                "max-lines": "off",
                "max-lines-per-function": "off",
                "max-statements": "off",
                "no-empty-function": "off",
                "no-magic-numbers": "off"
            }
        }
    ]
}
